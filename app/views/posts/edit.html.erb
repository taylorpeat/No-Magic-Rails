<html>
  <body>

    <div class="errors">
      <% @post.errors.each do |attribute, error| %>
        <p class="error" style="color: orange">
          <%= attribute %>: <%= error %>
        </p>
      <% end%>
    </div>

    <%= form_tag post_path(@post.id), method: 'patch' do %>

      <%= label_tag 'Title' %>
      <%= text_field_tag 'post[title]', @post.title %>
      <br /> <br />

      <%= label_tag 'Body' %>
      <%= text_field_tag 'post[body]', @post.body %>
      <br /> <br />

      <%= label_tag 'Author' %>
      <%= text_field_tag 'post[author]', @post.author %>
      <br /> <br />

      <%= submit_tag 'Update Post' %>

    <% end %>

    <br />

    <%= link_to 'Back to Post', post_path(@post.id) %>

  </body>
</html>